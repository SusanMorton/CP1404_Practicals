BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: "34"
            id: mile_input
            font_size: 50
            on_text: app.handle_convert()
        BoxLayout:
            orientation:'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 50
                on_press: app.handle_increment(int(mile_input.text), 1)
            Button:
                text: 'Down'
                font_size: 50
                on_press: app.handle_increment(int(mile_input.text), -1)
